@model FoodTruck

<partial name="_DashboardLinks"></partial>

<div class="container mt-5">
  <form asp-controller="FoodTrucks" asp-action="Update" asp-route-foodTruckId="@Model.FoodTruckId" method="POST">
    <fieldset class="border p-3">
      <legend class="w-auto">
        Edit Foodtruck
      </legend>

      <div class="form-group row">
        <label asp-for="Name" class="col-sm-3 col-form-label">
          Name 
          <span asp-validation-for="Name" class="text-danger font-weight-bold">
        </span>
        </label>
        <div class="col-sm-9">
          <input asp-for="Name" class="form-control">
        </div>
      </div>

      <div class="form-group row">
        <label asp-for="Style" class="col-sm-3 col-form-label">
          Style 
          <span asp-validation-for="Style" class="text-danger font-weight-bold">
        </span>
        </label>
        <div class="col-sm-9">
          <input asp-for="Style" class="form-control">
        </div>
      </div>

      <div class="form-group row">
        <label asp-for="Description" class="col-sm-3 col-form-label">
          Description 
          <span asp-validation-for="Description" class="text-danger font-weight-bold">
        </span>
        </label>
        <div class="col-sm-9">
          <textarea asp-for="Description" class="form-control" rows="13"></textarea>
        </div>
      </div>

      <div class="text-right">
        <a asp-controller="FoodTrucks" asp-action="Delete" asp-route-foodTruckId="@Model.FoodTruckId" class="btn btn-danger">Delete</a>
        <a asp-controller="FoodTrucks" asp-action="Dashboard" class="btn btn-primary">Cancel</a>
        <button class="btn btn-success">Update</button>
      </div>
    </fieldset>
  </form>
</div>