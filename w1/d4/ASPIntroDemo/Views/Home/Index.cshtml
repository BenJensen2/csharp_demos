<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="~/style.css">
</head>
<body>
  <h1 class="red">Hello World</h1>

  @{
    string[] travelDestinations = new string[]
    {
      "Longyearbyen", "Solovetsky Islands", "Socotra", "Bhutan"
    };
  }

  <ul>
    @foreach (string destination in travelDestinations)
    {
      <li>
        <a href="/travel/@destination">@destination</a>
      </li>
    }
  </ul>

</body>
</html>